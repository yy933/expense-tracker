<div class="container-sm">
  <div class="row d-flex justify-content-center my-4">
    <section class="create-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card border-secondary mb-3" >
              <div class="card-body p-4 text-secondary">
                <div class="my-md-4">
                  <div class="row card-title mb-3 text-center">
                    <div class="col pt-1">
                      <h2 class="fw-bold my-3 text-uppercase" style="font-family: huninn;">登入</h2>
                    </div>
                  </div>
                  <form action="/user/login" method="POST">
                    <div class="form-outline form-white mb-4 d-flex">
                      <div class="col-4 d-flex align-items-center"> <label class="form-label fs-4 fw-bold" for="email">Email：</label></div>
                      <div class="col-8"><input type="email" id="email" name="email" class="form-control form-control-lg" placeholder="請輸入Email"></div>
                    </div>
                    <div class="form-outline form-white mb-4 d-flex">
                      <div class="col-4 d-flex align-items-center"> <label class="form-label fs-4 fw-bold" for="password">密碼：</label></div>
                      <div class="col-8"><input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="請輸入密碼"></div>
                    </div>
                    <div class="col text-center my-2">
                      <button class="btn btn-outline-info col-sm-3 fs-5" type="submit" style="font-family: huninn;">登入</button>
                      
                    </div>
                    <div class="col text-center"> <a href="#">忘記密碼?</a> </div>
                    <div class="divider d-flex align-items-center my-4">
                      <p class="text-center fw-bold mx-3 mb-0">或是</p>
                    </div>
                    <div class="d-flex flex-column align-items-center justify-content-center">
                      <a href="/auth/google" class="btn btn-block btn-primary mb-2" style="background-color: #dd4b39;"
              type="submit"><i class="fab fa-google me-2"></i> Google帳號登入</a>
                      <a href="/auth/facebook" class="btn btn-block btn-primary mb-2" style="background-color: #3b5998;"
              type="submit"><i class="fab fa-facebook-f me-2"></i>Facebook帳號登入</a>
                    </div>
                  </form>
                </div>
                <div class="text-center">還沒有帳號嗎？<a href="/user/register">點此快速註冊</a></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
