<div class="container-sm">
  <div class="row d-flex justify-content-center my-4">
    <section class="create-section">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-12 col-md-8 col-lg-6">
                <div class="card border-secondary mb-3">
                  <div class="card-body p-4 text-secondary">
                    <div class="my-md-4">
                      <div class="card-title mb-3">
                        <div class="row">
                          <div class="text-center col-12 pt-1">
                            <h2 class="fw-bold my-3 text-uppercase" style="font-family: huninn;">請輸入支出</h2>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-5 d-flex align-items-end"> 
                            <p class="mb-0" style="font-family: huninn;">*為必填欄位</p>
                          </div>
                        </div> 
                      </div>
                      {{> message}}
                      <form action="/records/new" method="POST">
                        <div class="form-outline form-white mb-4 d-flex">
                          <div class="col-3 d-flex align-items-center"><label class="form-label fs-4 fw-bold" for="itemName">名稱*：</label></div>
                          <div class="col-9"><input type="text" id="itemName" name="itemName" class="form-control form-control-lg" value="{{itemName}}"></div>
                      </div>
                      <div class="form-outline form-white mb-4 d-flex">
                        <div class="col-3 d-flex align-items-center"> <label class="form-label fs-4 fw-bold" for="date">日期*：</label></div>
                        <div class="col-9"><input type="date" id="date" name="date" class="form-control form-control-lg" value="{{date}}"></div>
                      </div>
                      <div class="form-outline form-white mb-4 d-flex">
                        <div class="col-3 d-flex align-items-center"> <label class="form-label fs-4 fw-bold" for="categoryId">類別*：</label></div>
                        <div class="col-9">
                          <select name="categoryId" id="categoryId" class="form-select form-select-lg">
                          {{#each categories}}
                          <option value="{{ this._id }}" {{#if this.selected}} selected {{/if}}>{{ this.name }}</option>
                          {{/each}}
                          </select>
                        </div>
                      </div>
                      <div class="form-outline form-white mb-4 d-flex">
                        <div class="col-3 d-flex align-items-center"> <label class="form-label fs-4 fw-bold" for="amount">金額*：</label></div>
                        <div class="col-9"><input type="number" id="amount" name="amount" class="form-control form-control-lg" min="1" value="{{amount}}"></div>
                      </div>
                      <div class="text-center">
                        {{!-- add new record button --}}
                          <button class="btn btn-outline-info col-sm-5 fs-5" type="button" data-bs-toggle="modal" data-bs-target="#confirmAddNew">新增支出</button>
                          {{!-- confirm add new record modal --}}
                          <div class="modal fade" id="confirmAddNew" tabindex="-1"
                          aria-labelledby="confirmAddNewLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                              <div class="modal-content">
                                <div class="modal-body">
                                  <p class="fs-2">你確定要新增這筆支出嗎?</p>
                                </div>
                                <div class="modal-footer" style="border-top: none;">
                                  <button type="button" class="btn btn-secondary"
                                    data-bs-dismiss="modal">取消</button>
                                    <button type="submit" class="btn btn-danger">確定新增</button>
                                </div>
                              </div>
                            </div>
                          </div>
                          {{!-- confirm add new record modal end --}}
                        <a href="/"><button class="btn btn-outline-secondary col-sm-5 fs-5" type="button">回首頁</button></a>
                      </div>
                      </form> 
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
    </section>
  </div>
</div>