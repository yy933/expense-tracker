<div class="container-sm">
  <div class="row d-flex justify-content-center my-4">
    <section class="create-section">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                {{!-- sign up card  --}}
                <div class="card border-secondary mb-3" >
                  <div class="card-body p-4 text-secondary">
                    <div class="my-md-4">
                      {{!-- card title  --}}
                      <div class="row card-title mb-3 text-center">
                        <div class="col pt-1">
                          <h2 class="fw-bold my-3 text-uppercase" style="font-family: huninn;">註冊帳號</h2>
                        </div>
                      </div>
                        {{> message}}
                      <form action="/user/register" method="POST">
                        <div class="form-outline form-white mb-4 d-flex">
                          <div class="col-4 d-flex align-items-center"><label class="form-label fs-4 fw-bold" for="name">姓名：</label></div>
                          <div class="col-8"><input type="text" id="name" name="name" class="form-control form-control-lg" placeholder="請輸入姓名" value="{{name}}"></div>
                      </div>
                      <div class="form-outline form-white mb-4 d-flex">
                        <div class="col-4 d-flex align-items-center"> <label class="form-label fs-4 fw-bold" for="email">Email：</label></div>
                        <div class="col-8"><input type="email" id="email" name="email" class="form-control form-control-lg" placeholder="請輸入email" value="{{email}}"></div>
                      </div>
                      <div class="form-outline form-white mb-4 d-flex">
                        <div class="col-4 d-flex align-items-center"> <label class="form-label fs-4 fw-bold" for="password">密碼：</label></div>
                        <div class="col-8"><input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="請輸入密碼" value="{{password}}"></div>
                      </div>
                      <div class="form-outline form-white mb-4 d-flex">
                        <div class="col-4 d-flex align-items-center"> <label class="form-label fs-4 fw-bold" for="confirmPassword">確認密碼：</label></div>
                        <div class="col-8"><input type="password" id="confirmPassword" name="confirmPassword" class="form-control form-control-lg" placeholder="請再次確認密碼" value="{{confirmPassword}}"></div>
                      </div>
                      <div class="col text-center">
                        <button class="btn btn-outline-info col-sm-3 fs-5" type="submit" style="font-family: huninn;">建立帳號</button>
                      </div>
                      </form> 
                    </div>
                    <div class="text-center">已經有帳號了？<a href="/user/login">點此登入</a></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
    </section>
  </div>
</div>